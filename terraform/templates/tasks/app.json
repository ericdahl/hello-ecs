[
  {
    "image": "ericdahl/hello-ecs:4a92530",
    "memory": 512,
    "name": "hello-ecs",
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "environment": [
      {
        "name": "SPRING_REDIS_HOST",
        "value": "${redis_host}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/hello-ecs/app",
        "awslogs-region": "us-west-2",
        "awslogs-stream-prefix": "hello-ecs"
      }
    },
    "healthCheck": {
      "startPeriod": 120,
      "command":  [ "CMD-SHELL", "curl -f http://localhost:8080 || exit 1" ]
    }
  }
]
